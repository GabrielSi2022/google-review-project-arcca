generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Business {
  id         String   @id @default(uuid())
  name       String
  linkMap    String
  linkReview String

  createdAt DateTime  @default(now()) 
  updatedAt DateTime @updatedAt 

  reviews Review[]

  @@map("business")
}


model Review {
  id              String  @id @default(uuid())
  rating          Int
  approximatedDate String  
  text            String
  answer           String?

  createdAt DateTime  @default(now()) 
  updatedAt DateTime @updatedAt 
  

  
  business Business[]

  @@map("reviews")
}
